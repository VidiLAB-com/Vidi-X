// definiramo varijablu za pohranu broja živih susjeda
int neighbour;

// stvaranje TFT objekta (zaslon)
Adafruit_ILI9341 tft = Adafruit_ILI9341(TFT_CS, TFT_DC);

void setup() {
  // definiramo input pinove tj. upravljačke gumbe
  pinMode(inPin, INPUT_PULLUP); // A gumb mora biti definiran kao INPUT_PULLUP
  pinMode(colPin, INPUT);
  pinMode(inPat, INPUT);
  // inicijalizacija zaslona
  tft.begin();
  // postavljamo orijentaciju ekzaslonarana
  tft.setRotation(3);
  // definiramo boju pozadine (crna troši najmanje struje)
  tft.fillScreen(ILI9341_BLACK);
  // pozvamo funkciju za iscrtavanje mreže
  show_grid();
}

void loop() {
  // ukoliko pritisnemo START gumb progream će preskočiti
  // funkciju za izračun susjeda te će samo iscrtati
  // trenutno stanje igre 
  if (digitalRead(inPin) == HIGH) {
    // pozivamo funkciju za izračun susjeda
    cal_neighbour();
    // iscrtavamo trenutno stanje igre
    show_grid();
  }
   else {
    // iscrtavamo trenutno stanje igre
    show_grid();
  }
  // stisnemo li tipku gore, nasumično odaberi boju čelija
  if (digitalRead(colPin) == HIGH) {
    col=int(random(65535));
  }
  // stisnemo li tipku VOL., nasumično odaberi stanje čelija
  // OVO SE ZAPRAVO PONAŠA KAO //RESET// SVIJETA i igra počinje ispočetka
  if (digitalRead(inPat) == HIGH) {
    grid_init();
  }
}

void show_grid(){
  // iscrtavanje trenutnog stanja igre
  // koordinate postavljamo u kut zaslona
  uint16_t x=0;
  uint16_t y=0;
  
  for (uint8_t i = 0; i < RAW; i++){
    x=0;
    for (uint8_t j = 0; j < COL; j++){
      // ukoliko je vrijednost ISTINA iscrtavamo čeliju u boji 
      if (world[i][j] == 1) tft.fillRect(x,y,CELL,CELL, col);             
      // ukoliko je vrijednost različita od ISTINE iscrtavamo čeliju u crnoj boji pozadine ekrana
      else                  tft.fillRect(x,y,CELL,CELL,ILI9341_BLACK);      
      // povečavamo x za velićinu kolone
      x+=ssf;    
    }
    // povečavamo y za velićinu kolone tj. prelazimo u novi red
    y+=ssf;    
  }  
}

void grid_init(){
  // nasumična inicijalizacija čelije igare
  // pro moramo resetirati random brojač kako nebi stalno dobivali iste uzorke
  randomSeed(analogRead(0));
  // zatim popunjavamo polje niza random funkcijom
  for (uint8_t i = 0; i< RAW; i++){
    for (uint8_t j = 0; j< COL; j++){
      world[i][j]=int(random(2));
    }
  }
  // prikazati će mo rezultat polja niza
  show_grid();
  delay(2000);
}

void copy_tab(){
  // sada treba napraviti kopiju svijeta za daljnju obradu
  for (uint8_t i = 0; i< RAW; i++){
    for (uint8_t j = 0; j< COL; j++){
      world[i][j]=next[i][j];    
    }
  }
}

void cal_neighbour(){
  // slijedeće linije koda izračunat će koliko susjeda ima pojedina čelija
  for (int i = 1; i< RAW-1; i++){
    for (int j = 1; j< COL-1; j++){
      neighbour=0;
      for (int k = -1; k <=1; k++){
        for (int l = -1; l<= 1; l++){
          neighbour += world[i+k][j+l];
        }
      }
      neighbour -= world[i][j];
      if      ((world[i][j] == 1) && (neighbour <  2)) next[i][j]=0;
      else if ((world[i][j] == 1) && (neighbour >= 4)) next[i][j]=0;
      else if ((world[i][j] == 0) && (neighbour == 3)) next[i][j]=1;
      else                                             next[i][j]=world[i][j];
    }
  }
  copy_tab();
}
